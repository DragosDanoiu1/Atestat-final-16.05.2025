<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Atestat4.Converters"
             xmlns:local="clr-namespace:Atestat4"
             x:Class="Atestat4.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- aici înregistrezi convertoarele -->
            <converters:SumConverter             x:Key="SumConverter" />
            <converters:AnnualRevenueConverter   x:Key="AnnualRevenueConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
